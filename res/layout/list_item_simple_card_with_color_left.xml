<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/task_list_item_rl"
	android:layout_width="match_parent"
	android:layout_height="70dp"
	android:padding="3dp" >

	<RelativeLayout
		android:id="@+id/list_item_rl_content"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:background="@drawable/list_item_active_selector" >

		<View
			android:id="@+id/list_item_view_color"
			android:layout_width="10dp"
			android:layout_height="match_parent"
			android:layout_marginBottom="2dp"
			android:background="#559" />

		<TextView
			android:id="@+id/list_item_tv_qr_type"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentLeft="true"
			android:layout_alignParentTop="true"
			android:layout_marginLeft="12dp"
			android:layout_marginTop="6dp"
			android:layout_toRightOf="@+id/list_item_view_color"
			android:text="标题你好"
			android:textSize="16sp"
			android:textStyle="bold" />

		<TextView
			android:id="@+id/list_item_tv_qr_date"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignBaseline="@+id/list_item_tv_qr_type"
			android:layout_toLeftOf="@+id/list_item_cb_is_star"
			android:gravity="left"
			android:padding="6dp"
			android:text="07-07"
			android:textColor="#e888" />

		<CheckBox
			android:id="@+id/list_item_cb_is_star"
			android:layout_width="wrap_content"
			android:layout_height="match_parent"
			android:layout_alignParentRight="true"
			android:layout_alignRight="@+id/list_item_tv_qr_type"
			android:layout_centerVertical="true"
			android:checked="true"
			android:focusable="false" />

		<TextView
			android:id="@+id/list_item_tv_qr_content"
			android:layout_width="wrap_content"
			android:layout_height="match_parent"
			android:layout_alignLeft="@+id/list_item_tv_qr_type"
			android:layout_alignParentBottom="true"
			android:layout_below="@+id/list_item_tv_qr_type"
			android:gravity="center_vertical"
			android:padding="6dp"
			android:paddingLeft="5dp"
			android:text="呵呵呵"
			android:textColor="@color/content_gray"
			android:textSize="16sp" />
	</RelativeLayout>

</RelativeLayout>